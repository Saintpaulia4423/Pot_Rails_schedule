<%= form_with model: @schedule do |f| %>
  <table class="col-md-6 text-center form-base">
    <tr>
      <th><%= f.label :title , "予定名" %></th>
      <td><%= f.text_field :title, class: "form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.date_field :start_day, class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.date_field :end_day, class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, "終日予定" %></th>
      <td><%= f.check_box :all_day, class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "メモ" %></th>
      <td><%= f.text_area :memo, class: "form-control"  %></td>
    </tr>
  </table>

  <div class="submit-btn">
      <%= f.submit yield(:button_text),  class: "btn btn-primary" %>
  </div>
<% end %>
