<% provide(:title, "スケジュール登録") %>
<h3>スケジュール登録</h3>

<%= form_with(model: @app) do |f| %>
  <table>
    <tr>
      <th><%= f.label :title , "予定名" %></th>
      <td><%= f.text_field :title, class: "form-control" %></td>
    </tr>

    <tr>
      <th><%= f.label :start_day, "開始日" %></th>
      <td><%= f.date_field :start_day, class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :end_day, "終了日" %></th>
      <td><%= f.date_field :end_day, class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :all_day, "終日予定" %></th>
      <td><%= f.radio_button :all_day, "終日", class: "form-control"  %></td>
    </tr>

    <tr>
      <th><%= f.label :memo, "メモ" %></th>
      <td><%= f.text_area :memo, class: "form-control"  %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "登録",  class: "btn btn-primary" %></li>
      <li><%= link_to "一覧へ", "index" %></li>
    </ul>
  </div>
<% end %>